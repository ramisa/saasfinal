<div class="center hero-unit">
  <h1>Post a new listing to Ralphs List</h1>

  <h2>
    This is the post a listing page for Ralphs List
  </h2>

</div>

<h3> Create New Movie </h3>

<%= form_tag '/ralphs_list/home' do %>

  <%= label :book, :title, 'Title' %>
  <%= text_field :book, :title %>

  <%= label :book, :author, 'Author' %>
  <%= text_field :book, :author %>

  <%= label :book, :condition, 'Condition' %>
  <%= select :book, :condition, ['Poor', 'Okay', 'Good', 'Like New'] %>

  <%= label :book, :price, 'Price' %>
  <%= text_field :book, :price %>

  <%= submit_tag 'Save Changes' %>

<% end %>

